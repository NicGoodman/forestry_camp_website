{
  "require": {
    "codemonauts/craft-instagram-feed": "^1.0",
    "craftcms/cms": "^3.0.0",
    "craftcms/redactor": "2.3.3.2",
    "craftcms/store-hours": "2.1.1.1",
    "itscoding/facebook-connector": "^1.4",
    "nystudio107/craft-imageoptimize": "^1.6",
    "nystudio107/craft-seomatic": "^3.2",
    "vlucas/phpdotenv": "^2.4.0"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
